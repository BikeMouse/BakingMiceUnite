<%- include('partials/header') -%>
<div class="container">
  <div class="row mt-5">
      <div class="col-6">
          <div>
              <p><strong>User Name</strong>: <%= user.userName %></p>
              <p><strong>Email</strong>: <%= user.email %></p>
              <a href="/logout" class="col-3 btn btn-primary">Logout</a>
          </div>
          <div class="mt-5">
            <h2>Add a recipe</h2>
            <form action="/post/createPost" enctype="multipart/form-data" method="POST">
              <div class="mb-3">
                  <label for="recipename" class="form-label">Recipe name</label>
                  <input type="text" class="form-control" id="recipename" name="recipename">
              </div>
              <div class="mb-3">
                <label for="category" class="form-label">Category</label>
                <select name="category" id="category">
                  <option value="Cakes and Baked Goods" selected>Cakes and Baked Goods</option>
                  <option value="Breads and Breadlikes">Breads and Breadlikes</option>
                  <option value="Breakfasts">Breakfasts</option>
                  <option value="Desserts">Desserts</option>
                  <option value="Sauces">Sauces</option>
                  <option value="Soups/Stews">Soups/Stews</option>
                  <option value="Casseroles and Pasta Bakes">Casseroles and Pasta Bakes</option>
                  <option value="Salads">Salads</option>
                  <option value="Filled Rolls and Sandwiches">Filled Rolls and Sandwiches</option>
                  <option value="Stir Frys">Stir Frys</option>
                  <option value="Vegetables">Vegetables</option>
                  <option value="Vegetarian and Vegan">Vegetarian and Vegan</option>
                  <option value="Fish and Seafood">Fish and Seafood</option>
                  <option value="Meats">Meats</option>
                  <option value="Pasta Dishes">Pasta Dishes</option>
                  <option value="Misc">Misc</option>
                </select>
            </div>
              <div class="mb-3">
                <label for="ingredients" class="form-label">Ingedients</label>
                <textarea class="form-control" id="ingredients" name="ingredients"></textarea>
              </div>
              <div class="mb-3">
                <label for="procedure" class="form-label">Procedure</label>
                <textarea class="form-control" id="procedure" name="procedure"></textarea>
              </div>
              <div class="mb-3">
                <label for="imgUpload" class="form-label">Image</label>
                <input type="file" class="form-control" id="imageUpload" name="file">
              </div>
              <button type="submit" class="btn btn-primary" value="Upload">Submit</button>
            </form>
          </div>
      </div>
      <div class="col-6">
        <section class ="categories">
          <h3>Recipe Categories</h3>
          <div class="row justify-content-center mt-5">
            <a class="btn btn-primary" href="/cakes">Go to Cakes and Bakes Goods</a>
          </div>
          <div class="row justify-content-center mt-5">
            <a class="btn btn-primary" href="/breads">Go to Breads and Breadlikes</a>
          </div>
          <div class="row justify-content-center mt-5">
            <a class="btn btn-primary" href="/breakfasts">Go to Breakfasts</a>
          </div>
          <div class="row justify-content-center mt-5">
            <a class="btn btn-primary" href="/desserts">Go to Desserts</a>
          </div>
          <div class="row justify-content-center mt-5">
            <a class="btn btn-primary" href="/sauces">Go to Sauces</a>
          </div>
          <div class="row justify-content-center mt-5">
            <a class="btn btn-primary" href="/soups">Go to Soups/Stews</a>
          </div>
          <div class="row justify-content-center mt-5">
            <a class="btn btn-primary" href="/casseroles">Go to Casseroles and Pasta Bakes</a>
          </div>
          <div class="row justify-content-center mt-5">
            <a class="btn btn-primary" href="/salads">Go to Salads</a>
          </div>
          <div class="row justify-content-center mt-5">
            <a class="btn btn-primary" href="/sandwiches">Go to Filled Rolls and Sandwiches</a>
          </div>
          <div class="row justify-content-center mt-5">
            <a class="btn btn-primary" href="/stirfrys">Go to Stir Frys</a>
          </div>
          <div class="row justify-content-center mt-5">
            <a class="btn btn-primary" href="/vegetables">Go to Vegetables</a>
          </div>
          <div class="row justify-content-center mt-5">
            <a class="btn btn-primary" href="/vegetarian">Go to Vegetarian and Vegan</a>
          </div>
          <div class="row justify-content-center mt-5">
            <a class="btn btn-primary" href="/fish">Go to Fish and Seafood</a>
          </div>
          <div class="row justify-content-center mt-5">
            <a class="btn btn-primary" href="/meats">Go to Meats</a>
          </div>
          <div class="row justify-content-center mt-5">
            <a class="btn btn-primary" href="/pasta">Go to Pasta Dishes</a>
          </div>
          <div class="row justify-content-center mt-5">
            <a class="btn btn-primary" href="/misc">Go to Misc</a>
          </div>
        </section>
      </div>
      <div class="col-6">
        <ul class="row list-unstyled">
        <% for(let i = 0; i < posts.length; i++) {%>
          <li class="col-6 justify-content-between mt-5">
            <a href="/post/<%= posts[i]._id%>">
              <img class="img-fluid" src="<%= posts[i].image%>">
            </a>
          </li>
        <% } %>
        </ul>
        <div class="row justify-content-center mt-5">
          <a class="btn btn-primary" href="/feed">Go to Feed</a>
        </div>  
      </div>  
    </div>
  </div>
</div>
<%- include('partials/footer') -%>