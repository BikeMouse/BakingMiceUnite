<%- include('partials/header') -%>

<main class="container">
  <div class="row justify-content-center">
    <div class="card" style="width: 18rem;">
      <div class="card-body">
        <% if (locals.messages.errors) { %> <% messages.errors.forEach( el => { %>
          <div class="alert alert-danger"><%= el.msg %></div>
          <% }) %> <% } %> <% if (locals.messages.info) { %> <%
          messages.info.forEach( el => { %>
          <div class="alert alert-info"><%= el.msg %></div>
          <% }) %> <% } %>
        <h5 class="card-title d-flex justify-content-center fw-bold mt-5 fs-1">Login</h5>
        <form action="/login" method="POST">
          <div class="mb-3 mt-5 text-center">
            <label for="exampleInputEmail1" class="form-label"
              >Email address</label
            >
            <input
              type="email"
              class="form-control"
              id="exampleInputEmail1"
              aria-describedby="emailHelp"
              name="email"
            />
          </div>
          <div class="mb-3 mt-5 text-center">
            <label for="exampleInputPassword1" class="form-label">Password</label>
            <input
              type="password"
              class="form-control"
              id="exampleInputPassword1"
              name="password"
            />
          </div>
          <button type="submit" class="btn btn-primary mt-5 ms-5 fw-bold d-flex justify-content-center">Submit</button>
        </form>
      </div>
    </div>
  </div>
</main>

<%- include('partials/footer') -%>
